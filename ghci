let ghciEscapeShellArg arg = "'" ++ concatMap (\x -> if x == '\'' then "'\"'\"'" else [x]) arg ++ "'"                             
:def! search return . (":! hoogle --color --count=20 " ++) . ghciEscapeShellArg                                                   
:def! doc return . (":! hoogle --color --info " ++) . ghciEscapeShellArg
